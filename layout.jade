extends ./base.jade

block content
  mixin bad()
    li(attributes)
      i.icon-remove
      block
  mixin good()
    li(attributes)
      i.icon-ok
      block
  mixin sectionbreak(title)
    section.section-break-slide(data-state="section-break")
      h2!= jade.escape(title).replace(/tt/g, '<span class="tt">tt</span>')
  .reveal
    // Any section element inside of this container is displayed as a slide
    .slides
      block slides
      block vanity-slide
        section
          h2 Forbes Lindesay
          h3 Social Networks
          p Twitter: @ForbesLindesay
          p GitHub: @ForbesLindesay
          p Blog: www.forbeslindesay.co.uk
          h3 Open Source
          p Jade
          p Browserify Middleware
          p esdiscuss.org
          p regexplained.co.uk
          h3 Work
          p Red Gate
  script(src="/index.js")